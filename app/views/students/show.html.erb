<p id="notice"><%= notice %></p>
<h1>Student Details</h1>

<p>
  <strong>Name:</strong>
  <%= @student.first_name %>   <%= @student.last_name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @student.age %>
</p>

<p>
  <strong>Date of birth:</strong>
  <%= @student.date_of_birth.strftime("%m/%d/%Y")  %>
</p>

<p>
  <strong>Rating:</strong>
  <% if @student.rating  == 0 %>
    <%= 'Unrated' %>
  <% else %>
    <%= @student.rating %>
  <% end %>
</p>

<p>
<strong>Registrations (<%= @student.registrations.size %>)&nbsp;&nbsp;</strong> 
  <% for reg in @student.registrations %>
    <%= reg.camp.curriculum.name %>
    <%= reg.camp.start_date.strftime("%m/%d/%y")  %>
    <% end %>

</p>

<p>
  <strong>Active:</strong>
  <% if @student.active  == true %>
    <%= 'Yes' %>
  <% else %>
    <%= 'No' %>
  <% end %>
</p>
<p>
<%= link_to 'Edit', edit_student_path(@student), class: "button tiny radius"%> |
<%= link_to 'Back', students_path, class: "button tiny radius" %>
</p>