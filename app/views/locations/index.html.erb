<h1>Locations</h1>

<table>
  <thead>
    <tr>
     <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Capacity</th>
      <% if logged_in? && (current_user.role?(:admin) )%> 
      <th>Active</th>
      <% end %>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location_path(location) %></td>
        <td><%= location.street_1 %> <%= location.street_2 %> </td>
        <td><%= location.city %></td>
        <td><%= location.state %></td>
        <td><%= location.zip %></td>
        <td><%= location.max_capacity %></td>
        <% if logged_in? && (current_user.role?(:admin) )%> 
        <td><%= location.active == "true" ? "Inactive" : "Active" %></td>
        <td><%= link_to 'Edit', edit_location_path(location), class: "button tiny radius" %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' },class: "button tiny radius" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if logged_in? && (current_user.role?(:admin))%> 
<%= link_to 'New Location', new_location_path,class: "button [radius round]" %>
<%end %>
