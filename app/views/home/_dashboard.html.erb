<h1> Dashboard</h1>
<div class="container_12">
	<div clas= "grid_3" id = "content">
		<h3> Welcome <%= current_user.instructor.proper_name %></h3>
		<img alt="Profile Picture" src="/assets/propic.jpeg" />
	</div>


<div id="top_padding">
	<div class="grid_8" id ="content">
		<h3> Upcoming Camps</h3>
		<table>
		  <thead>
		    <tr>
		      <th>Camp</th>
		      <th>Registered Student</th>
  		      <th>Date</th>
		      <th>Actions</th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @upcoming_camps.each do |camp| %>
		      <tr>
		        <td><%= link_to camp.name, curriculum_path(camp.curriculum) %></td>
		        <td><%= camp.registrations.size %></td>
		        <td><%= camp.start_date.strftime('%m/%d/%y') %> 
				  <% if camp.start_date != camp.end_date %>
				    <%= "- #{camp.end_date.strftime('%m/%d/%y')}" %>
				  <% end %>
				</td>
		        <td><%= link_to 'Edit', edit_camp_path(camp), class: "button tiny radius" %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
		<span class="paginate">
			<%= will_paginate @upcoming_camps, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
		</span>
	</div>
</div>
</div>